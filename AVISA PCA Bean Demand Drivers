df_table[, 2:4] <- round(df_table[, 2:4], 2)
ind_0 <- which(df_table$`2050 Bean share of protein kcal/capita/day` == 
                 df_table$`2020 Bean share of protein kcal/capita/day`)
df_table$`Pct. Change`[ind_0] <- 0
#kable(df_table) %>% kable_styling(bootstrap_options = c("striped", "hover", "condensed", "responsive"))

